@model PartyInvitationApp.Models.Party

@{
    ViewData["Title"] = "Create Party";
}

<h2 class="mt-4">Create a New Party</h2>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Description:</label>
        <input type="text" asp-for="Description" class="form-control" required />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Event Date:</label>
        <input type="date" asp-for="EventDate" class="form-control" required />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Location:</label>
        <input type="text" asp-for="Location" class="form-control" required />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create Party</button>
    <a href="/Party/Index" class="btn btn-secondary">Back to List</a>
</form>
