@model PartyInvitationApp.Models.Party

@{
    ViewData["Title"] = "Manage Party";
}

<h2 class="mt-4">Manage Party: @Model.Description</h2>

<h3>Invitations</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Guest Name</th>
            <th>Email</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invitation in Model.Invitations)
        {
            <tr>
                <td>@invitation.GuestName</td>
                <td>@invitation.GuestEmail</td>
                <td>@invitation.Status</td>
            </tr>
        }
    </tbody>
</table>

<h3>Add Invitation</h3>
<form method="post" action="/Invitation/SendInvitation">
    <input type="hidden" name="partyId" value="@Model.PartyId" />

    <div class="mb-3">
        <label class="form-label">Guest Name:</label>
        <input type="text" name="guestName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Guest Email:</label>
        <input type="email" name="guestEmail" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Send Invitation</button>
</form>

<a href="/Party/Index" class="btn btn-secondary mt-3">Back to List</a>
